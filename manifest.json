{
  "manifest_version": 3,
  "name": "Transaction Parser Extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "host_permissions": [
    "http://localhost/*" 
  ],
  "content_scripts": [
    {
      "js": ["src/content.ts"],
      "matches": ["https://ibank.bog.ge/*", "https://bonline.bog.ge/*"]
    }
  ],
  "permissions": ["downloads", "activeTab"]
}
